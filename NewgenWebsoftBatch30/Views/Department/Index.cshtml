@model IEnumerable<NewgenWebsoftBatch30.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Departments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeptId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeptId" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeptId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
